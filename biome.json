{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": {
        "enabled": true
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "formatWithErrors": true,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineEnding": "lf",
        "lineWidth": 80
    },
    "javascript": {
        "globals": ["Bun"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true,
            "complexity": {
                "noForEach": "off"
            },
            "correctness": {
                "noNodejsModules": "off",
                "useImportExtensions": "off"
            },
            "suspicious": {
                "noConsole": {
                    "level": "warn",
                    "options": {
                        "allow": ["info", "warn", "error"]
                    }
                }
            },
            "style": {
                "noDefaultExport": "off",
                "useExplicitLengthCheck": "off"
            }
        }
    },
    "overrides": [
        {
            "include": ["./.vscode/**"],
            "linter": {
                "enabled": false
            }
        },
        {
            "include": ["./utils/**", "./tests/**"],
            "linter": {
                "rules": {
                    "suspicious": {
                        "noConsole": "off",
                        "noConsoleLog": "off"
                    }
                }
            }
        }
    ]
}
